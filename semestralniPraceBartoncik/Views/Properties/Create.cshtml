@model Property
@{
    ViewData["Title"] = "Create Property";
    var owners = ViewBag.Owners as IEnumerable<User> ?? Enumerable.Empty<User>();
}

<h1>Create Property</h1>

<div class="row">
    <div class="col-md-6">
  <form method="post">
            <div class="mb-3">
    <label class="form-label" asp-for="Title">Title</label>
   <input class="form-control" asp-for="Title" required />
        <span asp-validation-for="Title" class="text-danger"></span>
        </div>
   
         <div class="mb-3">
      <label class="form-label" asp-for="Address">Address</label>
                <input class="form-control" asp-for="Address" required />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
  
 <div class="mb-3">
       <label class="form-label" asp-for="OwnerId">Owner</label>
      <select class="form-select" asp-for="OwnerId" required>
         <option value="">-- Select Owner --</option>
  @foreach (var owner in owners)
   {
     <option value="@owner.Id">@owner.Name (@owner.Email)</option>
            }
  </select>
    <span asp-validation-for="OwnerId" class="text-danger"></span>
            </div>
    
            <div class="mt-4">
      <button type="submit" class="btn btn-primary">Create</button>
      <a class="btn btn-secondary" href="/Properties">Cancel</a>
   </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
