@model User
@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<div class="row">
    <div class="col-md-6">
<form method="post">
   <input type="hidden" asp-for="Id" />
  
   <div class="mb-3">
         <label class="form-label" asp-for="Name">Name *</label>
        <input class="form-control" asp-for="Name" required />
    <span asp-validation-for="Name" class="text-danger"></span>
     </div>
    
        <div class="mb-3">
      <label class="form-label" asp-for="Email">Email *</label>
        <input class="form-control" asp-for="Email" type="email" required />
       <span asp-validation-for="Email" class="text-danger"></span>
    </div>
       
    <div class="mb-3">
    <label class="form-label" asp-for="Role">Role *</label>
        <select class="form-select" asp-for="Role" asp-items="Html.GetEnumSelectList<UserRole>()" required></select>
       <span asp-validation-for="Role" class="text-danger"></span>
      <small class="text-muted">
         Admin - plný přístup | Technician - provádí opravy | Owner - vlastník nemovitosti
   </small>
      </div>
      
 <div class="mt-4">
   <button type="submit" class="btn btn-primary">Save Changes</button>
  <a class="btn btn-secondary" href="/Users">Cancel</a>
</div>
        </form>
    </div>
</div>

@section Scripts {
 <partial name="_ValidationScriptsPartial" />
}