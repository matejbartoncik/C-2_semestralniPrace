@model IEnumerable<User>
@{
    ViewData["Title"] = "Users";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Users</h1>
    <a class="btn btn-primary" href="/Users/Create">Create New User</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <strong>No users found.</strong> Click "Create New User" to add your first user.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td><strong>@u.Name</strong></td>
                        <td>@u.Email</td>
                        <td>
                            @if (u.Role == UserRole.Admin)
                            {
                                <span class="badge bg-danger">@u.Role</span>
                            }
                            else if (u.Role == UserRole.Technician)
                            {
                                <span class="badge bg-primary">@u.Role</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@u.Role</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-secondary" href="/Users/Edit/@u.Id" title="Edit">Edit</a>
                                <a class="btn btn-sm btn-outline-danger" href="/Users/Delete/@u.Id" title="Delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <p class="text-muted">Total: @Model.Count() users</p>
    </div>
}